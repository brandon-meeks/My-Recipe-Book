.row
  .col-md-4.col-md-offset-4
    - if @user.errors.any?
      - @user.errors.full_messages.each do |msg|
        %div.alert.alert-danger{:role => 'alert'}
          = msg
    %form{:action => '/signup', :method => 'post'}
      = authenticity_token
      .form-group
        %label(for="user_first_name") First Name
        %input{:type => "text", :id => 'user_first_name', :name => 'user_first_name', :class => 'form-control'}/
      .form-group
        %label(for="user_last_name") Last Name
        %input{:type => "text", :id => 'user_last_name', :name => 'user_last_name', :class => 'form-control'}/
      .form-group
        %label(for="user_email") Email
        %input{:type => "email", :id => 'user_email', :name => 'user_email', :class => 'form-control'}/
      .form-group
        %label(for="user_password") Password
        %input{:type => "password", :id => 'user_password', :name => 'user_password', :class => 'form-control'}/
      .form-group
        %input.btn.btn-primary(type="submit" value="Create Account")/